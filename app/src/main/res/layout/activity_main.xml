<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f2405183c54e71b6cb4024d19804fb14"
    android:foreground="#0000DDFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Sec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"


        android:layout_marginBottom="350dp"
        android:background="@drawable/fields"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#020202"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginBottom="48dp"
        android:background="@drawable/fields"
        android:fontFamily="@font/roboto"
        android:text="Start"
        android:textColor="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/StartPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginRight="40dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/fields"
        android:fontFamily="@font/roboto"
        android:text="Pause"
        android:textColor="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/StopAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="39dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/fields"
        android:fontFamily="@font/roboto"
        android:text="Stop"
        android:textColor="#020202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="185dp"
        android:fontFamily="@font/roboto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="60dp"

        android:layout_marginTop="70dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gototimer"
        app:srcCompat="@drawable/korgi" />

    <Button
        android:id="@+id/gototimer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="21dp"
        android:background="#16181515"
        android:fontFamily="@font/roboto"
        android:gravity="right"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:text="..."
        android:textColor="#F7FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>